<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <layer-list>
            <item android:right="0dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="6dp" android:topLeftRadius="6dp"></corners>
                    <solid android:color="@color/bg_no_select"></solid>
                    <stroke android:width="1dp" android:color="#0082e0"></stroke>
                </shape>

            </item>
            <item android:bottom="1dp" android:left="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="6dp" android:topLeftRadius="6dp"></corners>
                    <solid android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="true">
        <shape>
            <corners android:bottomLeftRadius="6dp" android:topLeftRadius="6dp"></corners>
            <solid android:color="#0082e0"></solid>
            <stroke android:width="1dp" android:color="#0082e0"></stroke>

        </shape>
    </item>
</selector>